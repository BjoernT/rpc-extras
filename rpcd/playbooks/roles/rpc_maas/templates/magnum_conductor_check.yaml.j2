type: agent.plugin
label: magnum_conductor_check--{{ ansible_hostname }}
disabled    : false
period      : "{{ maas_check_period }}"
timeout     : "{{ maas_check_timeout }}"
details     :
    file    : run_plugin_in_venv.sh
    args    : ["{{ maas_plugin_dir }}magnum_service_check.py", "{{ ansible_ssh_host }}"]
alarms      :
    magnum_conductor_status :
        label                   : magnum_conductor_status--{{ ansible_hostname }}
        notification_plan_id    : "{{ maas_notification_plan }}"
        criteria                : |
            :set consecutiveCount={{ maas_alarm_local_consecutive_count }}
            if (metric["magnum-conductor_status"] != 1) {
                return new AlarmStatus(CRITICAL, "magnum-conductor down");
            }
