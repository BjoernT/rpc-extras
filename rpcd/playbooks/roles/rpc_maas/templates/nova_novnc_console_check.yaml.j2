type: agent.plugin
label: nova_novnc_console_check--{{ ansible_hostname }}
disabled    : false
period      : "{{ maas_check_period }}"
timeout     : "{{ maas_check_timeout }}"
details     :
    file    : service_api_local_check.py
    args    : ["nova_novnc", "{{ ansible_ssh_host }}", "6080", "--path", "vnc_auto.html"]
alarms      :
    nova_novnc_api_local_status :
        label                   : nova_novnc_api_local_status--{{ ansible_hostname }}
        notification_plan_id    : "{{ maas_notification_plan }}"
        criteria                : |
            :set consecutiveCount={{ maas_alarm_local_consecutive_count }}
            if (metric["nova_novnc_api_local_status"] != 1) {
                return new AlarmStatus(CRITICAL, "nova vnc console down");
            }
